<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">
    <fest:if test="!json.user">
        <h1>Singup</h1>

        <form class="pure-form pure-form-stacked" name="signup">
            <input type="email" name="email" placeholder="{json.texts.email}" required="required" />
            <input type="text" name="login" placeholder="{json.texts.login}" required="required" />
            <input type="password" name="password" placeholder="{json.texts.password}" required="required"/>

            <button type="submit" data-type="logout">Submit</button>
        </form>
    </fest:if>
</fest:template>